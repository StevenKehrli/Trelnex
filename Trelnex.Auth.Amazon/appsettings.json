{
  "AllowedHosts": "*",
  "ServiceConfiguration": {
    "FullName": "Trelnex.Auth.Amazon",
    "DisplayName": "Auth",
    "Version": "1.0.0",
    "Description": "Amazon RBAC Authentication and Authorization Service"
  },
  "AmazonCredentials": {
    "Region": "FROM_ENV",
    "AccessTokenClientConfiguration": {
      "BaseAddress": "FROM_ENV"
    }
  },
  "Auth": {
    "trelnex-api-rbac": {
      "Audience": "FROM_ENV",
      "Authority": "FROM_ENV",
      "MetadataAddress": "FROM_ENV",
      "Scope": "rbac"
    }
  },
  "JWT": {
    "openid-configuration":
    {
      "issuer": "FROM_ENV",
      "token_endpoint": "FROM_ENV",
      "jwks_uri": "FROM_ENV",
      "response_types_supported": [ "id_token" ],
      "subject_types_supported": [ "public" ],
      "id_token_signing_alg_values_supported": [ "ES256" ]
    },
    "DefaultKey": "FROM_ENV",
    "SecondaryKeys": [],
    "RegionalKeys": [],
    "ExpirationInMinutes": 60
  },
  "RBAC": {
    "Region": "FROM_ENV",
    "TableName": "FROM_ENV"
  },
  "RewriteRules": [
    {
      "Regex": "^auth-service/(.*)",
      "Replacement": "$1",
      "SkipRemainingRules": "true"
    }
  ],
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Expressions"
    ],
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "StartsWith(RequestPath, '/healthz') or StartsWith(RequestPath, '/swagger')"
        }
      }
    ]
  }
}