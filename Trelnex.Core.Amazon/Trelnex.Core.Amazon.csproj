<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <PackageId>Trelnex.Core.Amazon</PackageId>
        <PackageLicenseFile>LICENSE</PackageLicenseFile>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <RepositoryUrl>https://github.com/StevenKehrli/Trelnex.Core</RepositoryUrl>
        <DebugType>embedded</DebugType>
        <IncludeSymbols>true</IncludeSymbols>
        <EmbedUntrackedSources>true</EmbedUntrackedSources>
    </PropertyGroup>

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <RootNamespace>Trelnex.Core.Amazon</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
        <None Include="LICENSE" Pack="true" PackagePath="" />
        <None Include="README.md" Pack="true" PackagePath="" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="AWSSDK.Core" Version="4.0.0" />
        <PackageReference Include="AWSSDK.DynamoDBv2" Version="4.0.0" />
        <PackageReference Include="AWSSDK.RDS" Version="4.0.0" />
        <PackageReference Include="AWSSDK.SecurityToken" Version="4.0.0" />
        <PackageReference Include="Microsoft.SourceLink.GitHub" Version="8.0.0" PrivateAssets="All" />
        <PackageReference Include="Npgsql" Version="9.0.3" />
        <PackageReference Include="OpenTelemetry.Instrumentation.AWS" Version="1.11.2" />
        <!-- <PackageReference Include="Trelnex.Core.Api" Version="2.0.0" /> -->
        <ProjectReference Include="..\Trelnex.Core.Api\Trelnex.Core.Api.csproj" />
    </ItemGroup>

</Project>
